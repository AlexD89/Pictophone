{
  "name": "pictophone",
  "version": "1.0.0",
  "description": "Pictophone is an online mulitplayer experience that lets users play a collaborative drawing game.",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",
    "server": "nodemon app.js",
    "server:debug": "nodemon --inspect app.js",
    "frontend-install": "npm install --prefix frontend",
    "frontend": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run frontend\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix frontend && npm run build --prefix frontend"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/alvitovitch/Pictophone.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alvitovitch/Pictophone/issues"
  },
  "homepage": "https://github.com/alvitovitch/Pictophone#readme",
  "dependencies": {
    "aws-sdk": "^2.1059.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.1",
    "concurrently": "^7.0.0",
    "dotenv": "^14.2.0",
    "express": "^4.17.2",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.6",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "sass": "^1.48.0",
    "socket.io": "^4.4.1",
    "validator": "^13.7.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.15"
  }
}
